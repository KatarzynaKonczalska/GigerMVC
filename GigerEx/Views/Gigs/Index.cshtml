@model IEnumerable<GigerEx.Models.Gig>

@{
    ViewBag.Title = "Index";
}
<h2>Koncerty</h2>

<p>
    @Html.ActionLink("Dodaj nowy", "Create")
    @using (Html.BeginForm("Index", "Gigs", FormMethod.Get))
    {
        @Html.AntiForgeryToken()
    <p>
        <label>City: @Html.DropDownList("City") </label>
        <label for="id">Band:</label>
        @Html.TextBox("searchString")
        <input type="submit" value="Szukaj" class="form-actions"/>
    </p>

    }
    </p>
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Band)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Info)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
            {
            <tr onclick="location.href = '@(Url.Action("Details", new { id=item.ID }))'">
                <td>
                    @Html.DisplayFor(modelItem => item.Band)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Place)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Info)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @*@Html.ActionLink("Details", "Details", new { id=item.ID }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
